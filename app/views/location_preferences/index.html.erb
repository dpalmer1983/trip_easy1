<div class="page-header">
  <h1>
    Location preferences
    <a href="/location_preferences/new" class="btn btn-lg btn-success">New Location preference</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Location options</th>
        <th>Actions</th>
      </tr>

      <% @location_preferences.each do |location_preference| %>
      <tr>
        <td><%= location_preference.user_id %></td>
        <td><%= location_preference.location_options_id %></td>
        <td>
          <a href="/location_preferences/<%= location_preference.id %>" class="btn btn-primary">Show</a>
          <a href="/location_preferences/<%= location_preference.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_location_preference/<%= location_preference.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

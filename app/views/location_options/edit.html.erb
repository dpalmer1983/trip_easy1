<!-- Validation failure messages -->
<% if @location_option.errors.any? %>
  <% @location_option.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Location Option #<%= @location_option.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_location_option/<%= @location_option.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for option -->
      <div class="form-group">
        <label for="option" class="control-label">
          Option
        </label>

        <input type="text" id="option" name="option" placeholder="Option" class="form-control" value="<%= @location_option.option %>">
      </div>

      <!-- Label and input for trip_id -->
      <div class="form-group">
        <label for="trip_id" class="control-label">
          Trip
        </label>

        <input type="text" id="trip_id" name="trip_id" placeholder="Trip" class="form-control" value="<%= @location_option.trip_id %>">
      </div>

      <button class="btn btn-warning">
        Update Location Option
      </button>
      or
      <a href="/location_options/<%= @location_option.id %>">Cancel</a>
    </form>
  </div>
</div>

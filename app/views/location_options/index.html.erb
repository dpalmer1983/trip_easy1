<div class="page-header">
  <h1>
    Location options
    <a href="/location_options/new" class="btn btn-lg btn-success">New Location option</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Option</th>
        <th>Trip</th>
        <th>Actions</th>
      </tr>

      <% @location_options.each do |location_option| %>
      <tr>
        <td><%= location_option.option %></td>
        <td><%= location_option.trip_id %></td>
        <td>
          <a href="/location_options/<%= location_option.id %>" class="btn btn-primary">Show</a>
          <a href="/location_options/<%= location_option.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_location_option/<%= location_option.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

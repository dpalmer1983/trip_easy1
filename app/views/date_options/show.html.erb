<div class="page-header">
  <h3>Date Option #<%= @date_option.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Trip</dt>
      <dd><%= @date_option.trip_id %></dd>

      <dt>Option</dt>
      <dd><%= @date_option.option %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/date_options" class="btn btn-primary">
        Back
      </a>
      <a href="/date_options/<%= @date_option.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_date_option/<%= @date_option.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

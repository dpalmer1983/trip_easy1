<div class="page-header">
  <h1>
    Date options
    <a href="/date_options/new" class="btn btn-lg btn-success">New Date option</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Trip</th>
        <th>Option</th>
        <th>Actions</th>
      </tr>

      <% @date_options.each do |date_option| %>
      <tr>
        <td><%= date_option.trip_id %></td>
        <td><%= date_option.option %></td>
        <td>
          <a href="/date_options/<%= date_option.id %>" class="btn btn-primary">Show</a>
          <a href="/date_options/<%= date_option.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_date_option/<%= date_option.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

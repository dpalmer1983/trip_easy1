<div class="page-header">
  <h1>
    Date preferences
    <a href="/date_preferences/new" class="btn btn-lg btn-success">New Date preference</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Date options</th>
        <th>Actions</th>
      </tr>

      <% @date_preferences.each do |date_preference| %>
      <tr>
        <td><%= date_preference.user_id %></td>
        <td><%= date_preference.date_options_id %></td>
        <td>
          <a href="/date_preferences/<%= date_preference.id %>" class="btn btn-primary">Show</a>
          <a href="/date_preferences/<%= date_preference.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_date_preference/<%= date_preference.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
